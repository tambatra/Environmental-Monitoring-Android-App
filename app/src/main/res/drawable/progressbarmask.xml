<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/background">
        <shape>
            <corners android:radius="20dp"/>
            <gradient android:startColor="@color/colorProgessBar3" android:centerColor="@color/colorProgessBar2" android:endColor="@color/colorProgessBar1" android:angle="45"/>
        </shape>
    </item>
    <item android:id="@+id/progress">
        <clip>
            <shape>
                <corners android:radius="20dp"/>
                <solid android:color="@color/colorProgessBarBackground"/>
            </shape>
        </clip>
    </item>

</layer-list>